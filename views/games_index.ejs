<!DOCTYPE html>
<html lang="en" class="bg-light">
    <%- include ("./ejs_partials/head.ejs")%>
    <link rel="stylesheet" href="styles/index.css">
    
    <body class=>
    <%- include ("./ejs_partials/nav.ejs")%>
    <main class="main">
        <div class="align-items-center justify-content-center" style="height: 400px">
            <div class="p-5 text-center bg-image" style="
    background-image: url('<%= games[0].image%>');
    background-size: contain;
    background-repeat: no-repeat;
    height: 100%;
    
    ">
  <div class="mask" style="background-color: rgba(0, 0, 0, 0.6); height: 100%">
    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="text-white">
            <h1 class="mb-3">Upcoming</h1>
            <h4 class="mb-3"><%=games[0].name%></h4>
            <h6 class="mb-3"><%=games[0].release%></h6>
            <a class="btn btn-outline-light btn-lg" href="<%=games[0].trailer%>" role="button">Watch Trailer</a>
        </div>
    </div>
</div>
</div>
</div>
        <section class="container upcoming">
            <h2> Upcoming </h2>
            <h3> <%=games[0].name%></h3>
            <div class="upcoming-game">
                <a href="/games/<%=games[0]._id%>"><img class="upcoming-pic"src="<%= games[0].image%>"></a>
            </div>
            <ul style="list-style: none">
                <li> <%=games[0].release%></li>
                <li> <a href="<%=games[0].trailer%>">Trailer</a></li>
            </ul>
        </section>
        <h2 class = "fGame">Featured Games</h2>
        <section class="lower-half">
            <div class="container games-index">
                <ul class= "row one" style="list-style: none">
                <% for(let i = 1; i<games.length; i++) { %>
                    <% const thisGame = games[i] %>
                    <div class=" col game-box">
                        <a href="/games/<%=thisGame._id%>"> <img src="<%=thisGame.image%>" alt="<%=thisGame.name%>"></a>
                    </div>
                <%}%>
                </ul>
            </div>
        </section>
        <%if(typeof currentUser !== "undefined") {%>
            <% if(currentUser.id === "6373f943c0d65aafed339b74") {%>
                <section class="add-new">
                    <form action="/games/new" method="GET">
                        <input class="new-button" type="submit" value="Add New Game"/>
                    </form>
                </section>
            <%}%>
        <%}%>
    </main>
<%- include ("./ejs_partials/footer.ejs")%>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>