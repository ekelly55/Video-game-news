<!DOCTYPE html>
<html lang="en" class="bg-light">
    <%- include ("./ejs_partials/head.ejs")%>
    <link rel="stylesheet" href="./node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles/index.css">

<body class="bg-light">
    <main class="main">
        <section class="container border border-primary upcoming">
            <h2> Upcoming </h2>
            <h3> <%=games[0].name%></h3>
            <div class="upcoming-game">
                <a href="/games/<%=games[0]._id%>"><img class="upcoming-pic"src="<%= games[0].image%>"></a>
            </div>
            <ul style="list-style: none">
                <li> <%=games[0].release%></li>
                <li> <a href="<%=games[0].trailer%>">Trailer</a></li>
            </ul>
        </section>
        <h2 class = "fGame">Featured Games</h2>
        <section class="lower-half">
            <div class="container games-index">
                <ul class= "row one" style="list-style: none">
                <% for(let i = 1; i<games.length; i++) { %>
                    <% const thisGame = games[i] %>
                    <div class=" col game-box">
                        <a href="/games/<%=thisGame._id%>"> <img src="<%=thisGame.image%>" alt="<%=thisGame.name%>"></a>
                    </div>
                <%}%>
                </ul>
            </div>
        </section>
        <%if(typeof currentUser !== "undefined") {%>
            <% if(currentUser.id === "6373f943c0d65aafed339b74") {%>
                <section class="add-new">
                    <form action="/games/new" method="GET">
                        <input class="new-button" type="submit" value="Add New Game"/>
                    </form>
                </section>
            <%}%>
        <%}%>
    </main>
<%- include ("./ejs_partials/footer.ejs")%>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>